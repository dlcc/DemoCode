<Application x:Class="DigiMixer.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DigiMixer.Wpf"
             xmlns:utils="clr-namespace:JonSkeet.WpfUtil;assembly=JonSkeet.WpfUtil">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="5,2" />
                <Setter Property="Margin" Value="3" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="3" />
                    </Style>
                </Style.Resources>
            </Style>

            <BooleanToVisibilityConverter x:Key="VisibilityConverter" />
            <utils:NullVisibilityConverter x:Key="NullVisibilityConverter" />
            <utils:NullVisibilityConverter x:Key="ReverseNullVisibilityConverter" Reverse="True"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
